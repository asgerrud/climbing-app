generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Location {
  id         String     @id @default(cuid())
  name       String
  lat        Float
  lon        Float
  createdAt  DateTime   @default(now()) @map("created_at")
  updatedAt  DateTime   @updatedAt @map("updated_at")
  categories Category[]
  type       Type[]
}

model Type {
  id        String     @id @default(cuid())
  name      String
  locations Location[]
}

model Category {
  id        Int        @id @default(autoincrement())
  name      String
  iconUrl   String
  locations Location[]
}

model Post {
  id        String  @id
  title     String
  content   String?
  published Boolean @default(false)
  authorId  String?
  users     users?  @relation(fields: [authorId], references: [id])
}

model users {
  id         String   @id
  name       String?
  email      String?  @unique
  created_at DateTime @default(now())
  updated_at DateTime
  Post       Post[]
}
